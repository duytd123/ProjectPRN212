<Window x:Class="ProjectPRN212.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Điền thông tin người thêm" Height="400" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Tên đầy đủ:"/>
            <TextBox x:Name="txtFullName"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail"/>

            <TextBlock Text="Mật khẩu:"/>
            <PasswordBox x:Name="txtPassword"/>

            <TextBlock Text="Chonk vai trò:"/>
            <ComboBox x:Name="cmbRole"/>

            <TextBlock Text="Số phone:"/>
            <TextBox x:Name="txtPhone"/>

            <TextBlock Text="Nơi sống:"/>
            <TextBox x:Name="txtAddress"/>

            <Button Content="Thêm " Click="btnAddUser_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

