<Window x:Class="ProjectPRN212.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejection Reason" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Nhập lý do từ chối:" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="ReasonTextBox" VerticalAlignment="Center" Width="360" Height="50" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom">
            <Button Content="OK" Width="80" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
