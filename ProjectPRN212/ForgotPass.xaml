<Window x:Class="ProjectPRN212.ForgotPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="300" Width="350"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4"
        KeyDown="Window_KeyDown">

    <Grid>
        <Border Width="350" Height="300" Background="White" CornerRadius="10"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20">
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="Forgot Password" FontSize="24" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Email -->
                <TextBlock Text="Enter your email" FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                <TextBox x:Name="txtEmail" Height="35" FontSize="14" Background="#EEE" BorderThickness="0" 
                         Margin="0,5,0,15" Padding="5"/>

                <!-- Button Submit -->
                <Button Content="Reset Password" Height="40" FontSize="16" 
                        Background="#007ACC" Foreground="White"
                        BorderThickness="0" Cursor="Hand" 
                        Margin="0,10,0,10" Click="ResetPassword_Click"/>

                <!-- Quay lại login -->
                <TextBlock Text="Back to Login" FontSize="14" Foreground="#007ACC" 
                           HorizontalAlignment="Center" Cursor="Hand"
                           Margin="0,0,0,10" MouseDown="BackToLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
