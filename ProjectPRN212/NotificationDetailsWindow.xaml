<Window x:Class="ProjectPRN212.NotificationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212"
        mc:Ignorable="d"
        Title="NotificationDetailsWindow" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Chi tiết đơn phản ánh" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="ViolationTypeText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="DescriptionText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="PlateNumberText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="LocationText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="ReportDateText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="StatusText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="FineAmountText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="DueDateText" FontSize="16" Margin="0,5"/>
            <Image x:Name="ViolationImage" Width="200" Height="150" Margin="0,5"/>
            <MediaElement x:Name="ViolationVideo" Width="300" Height="200" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
