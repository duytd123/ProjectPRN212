<Window x:Class="ProjectPRN212.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản trị viên hệ thống" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005F99"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10" MouseDown="Grid_MouseDown_ClearForm">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Filter Section -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="1">
            <TextBlock Text="Lọc vai trò:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox Name="cmbFilterRole" Width="120" SelectionChanged="FilterUsers"/>
            <TextBlock Text="Lọc địa chỉ:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="txtFilterAddress" Width="150" TextChanged="FilterUsersAddress"/>
            <TextBlock Text="Lọc Tên:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="txtSearchName" Width="150" TextChanged="FilterUsersName"/>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid Grid.Row="1" Grid.ColumnSpan="3" Name="UsersGrid" AutoGenerateColumns="False" SelectionChanged="UsersGrid_SelectionChanged" IsReadOnly="True" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên tài khoản" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Vai trò" Binding="{Binding Role}" Width="100"/>
                <DataGridTextColumn Header="SDT" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
                <DataGridCheckBoxColumn Header="Tình trạng khóa" Binding="{Binding IsDisabled}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Input Section -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="Full Name:"/>
                <TextBox Name="txtFullName"/>
                <TextBlock Text="Role:"/>
                <ComboBox Name="cmbRole"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Column="1">
                <TextBlock Text="Email:"/>
                <TextBox Name="txtEmail" IsReadOnly="True"/>
                <TextBlock Text="Phone:"/>
                <TextBox Name="txtPhone"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Column="2">
                <TextBlock Text="Password:"/>
                <PasswordBox Name="txtPassword" IsEnabled="False"/>
                <TextBlock Text="Address:"/>
                <TextBox Name="txtAddress"/>
            </StackPanel>
        </Grid>

        <!-- Button Section -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="btnAddUser" Content="Thêm người dùng" Background="#28A745"/>
            <Button Name="btnUpdateUser" Content="Cập nhật" Background="#007ACC"/>
            <Button Name="btnDisableUser" Content="Khóa tài khoản" Background="#DC3545"/>
            <Button Name="btnEnableUser" Content="Mở tài khoản" Background="#FFC107" Foreground="Black"/>
            <Button Name="btnSecurityLogin" Content="Xem tình trạng login" Width="159"/>
            <Button x:Name="btnConfigSystem" Content="Cấu hình hệ thống" Width="167"/>
        </StackPanel>

        <Button Name="btnLogout" Content="Đăng xuất" Grid.Column="2" HorizontalAlignment="Right" Margin="0,-2,0,284" Background="#6C757D" Grid.RowSpan="2"/>

    </Grid>
</Window>