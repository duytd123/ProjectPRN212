<Window x:Class="ProjectPRN212.ViolationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết vi phạm" Height="700" Width="600"
        WindowStartupLocation="CenterScreen" Background="#F4F4F4">
    <Grid>
        <Border Width="616" Height="673" Background="White" CornerRadius="10"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Nộp Phạt Trực Tuyến" FontSize="24" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" 
                           Margin="0,0,0,15" Grid.Row="0"/>

                <!-- Payment Form -->
                <StackPanel Grid.Row="1">
                    <!-- Violation Summary -->
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" 
                            Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Thông Tin Vi Phạm" FontSize="16" FontWeight="SemiBold" 
                                     Foreground="#007ACC" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Vi phạm:" Grid.Row="0" Grid.Column="0" 
                                         FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock x:Name="ViolationType" Text="" Grid.Row="0" Grid.Column="1" 
                                         Margin="0,5,0,5" TextWrapping="Wrap"/>

                                <TextBlock Text="Biển số xe:" Grid.Row="1" Grid.Column="0" 
                                         FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock x:Name="PlateNumber" Text="" Grid.Row="1" Grid.Column="1" 
                                         Margin="0,5,0,5"/>

                                <TextBlock Text="Địa điểm vi phạm:" Grid.Row="2" Grid.Column="0" 
                                         FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock x:Name="ViolationLocation" Text="" Grid.Row="2" Grid.Column="1" 
                                         Margin="0,5,0,5"/>

                                <TextBlock Text="Số tiền phạt:" Grid.Row="3" Grid.Column="0" 
                                         FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBlock x:Name="FineAmount" Text="" Grid.Row="3" Grid.Column="1" 
                                         Foreground="#FF4D4D" FontWeight="SemiBold" Margin="0,5,0,5"/>

                                <TextBlock Text="Số tiền nộp phạt:" Grid.Row="4" Grid.Column="0" 
                                         FontWeight="SemiBold" Margin="0,5,10,5"/>
                                <TextBox x:Name="FineAmountTextBox" Grid.Row="4" Grid.Column="1" 
                                         Margin="0,5,0,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Evidence Image -->
                    <TextBlock Text="Hình ảnh vi phạm:" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,10"/>
                    <Image x:Name="EvidenceImage" Width="300" Height="200" Margin="0,0,0,10"/>
                    <TextBlock x:Name="NoImageText" Text="Không có hình ảnh" Visibility="Collapsed" Margin="0,0,0,10"/>

                    <!-- Video Evidence -->
                    <TextBlock Text="Video vi phạm:" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,10"/>
                    <Button x:Name="PlayVideoButton" Content="Phát video" Click="PlayVideoButton_Click" Margin="0,0,0,10"/>
                    <TextBlock x:Name="NoVideoText" Text="Không có video" Visibility="Collapsed" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Action Buttons -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ProcessPaymentButton" Content="Thanh Toán" 
                          Grid.Column="1" Background="#4CAF50" Foreground="White"
                          Padding="15,10" Margin="0,0,10,0" Click="ProcessPaymentButton_Click"/>

                    <Button Content="Hủy" Grid.Column="2" Background="#999" Foreground="White"
                          Padding="15,10" Click="CancelButton_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>