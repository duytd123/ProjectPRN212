<Window x:Class="ProjectPRN212.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid Margin="20">
        <TextBlock Text="Số tiền phạt:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock x:Name="FineAmountTextBlock" FontSize="16" Margin="0,0,0,20"/>

        <TextBlock Text="Số dư tài khoản:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock x:Name="BalanceTextBlock" FontSize="16" Margin="0,0,0,20"/>

        <Button x:Name="PayButton" Content="Thanh Toán" Width="100" Click="PayButton_Click" HorizontalAlignment="Right"/>
        <Button x:Name="CancelButton" Content="Hủy" Width="100" Click="CancelButton_Click" HorizontalAlignment="Left"/>
    </Grid>
</Window>
