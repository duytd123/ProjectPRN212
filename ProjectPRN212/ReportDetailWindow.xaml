<Window x:Class="ProjectPRN212.ReportDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProjectPRN212"
        Title="Report Details" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" Background="#FAFAFA">
    
    <Window.Resources>
        <local:CustomStatusConverter x:Key="CustomStatusConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="📌 Report Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄 Report ID: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding ReportId}" Foreground="Blue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🚗 Plate Number: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding PlateNumber}" Foreground="Black"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👤 Reporter: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Reporter.FullName}" Foreground="Black"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📅 Report Date: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding ReportDate, StringFormat=\{0:dd/MM/yyyy\}}" Foreground="Black"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚖ Status: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Status}" Foreground="Black"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
            Visibility="{Binding RejectionReason, Converter={StaticResource CustomStatusConverter}, ConverterParameter=RejectionReason}">
                    <TextBlock Text="❌ Rejection Reason: " FontWeight="Bold" Foreground="Red"/>
                    <TextBlock Text="{Binding RejectionReason}" Foreground="Red"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💵 Fine Amount: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Violations[0].FineAmount, StringFormat=C}" Foreground="Green"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📨 Notification Sent: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding NotificationSent}" Foreground="Black"/>
                </StackPanel>

                <Button Content=" Close" Click="Close_Click"  Foreground="Black"
                        FontWeight="Bold" Margin="10,20,10,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
